<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayLight"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_contact_us_cl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/bg_contact_us" />

    <ImageView
        android:id="@+id/fragment_contact_us_iv_whatsApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_contact_us_iv_facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_contact_us_iv_facebook"
        app:srcCompat="@mipmap/ic_whats" />

    <ImageView
        android:id="@+id/fragment_contact_us_iv_facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_contact_us_iv_whatsApp"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        app:srcCompat="@mipmap/ic_facebook" />

    <ImageView
        android:id="@+id/fragment_contact_us_iv_twitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_contact_us_iv_facebook"
        app:layout_constraintStart_toEndOf="@+id/fragment_contact_us_iv_facebook"
        app:layout_constraintTop_toTopOf="@+id/fragment_contact_us_iv_facebook"
        app:srcCompat="@mipmap/ic_twitter" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/imageView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:paddingBottom="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView13"
        android:background="@mipmap/bg_mail">

        <TextView
            android:id="@+id/fragment_contact_us_tv_phoneContact"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="96655526fddddd004"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView28"
            app:layout_constraintEnd_toEndOf="@+id/imageView28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView28" />



    </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView28"
            app:layout_constraintEnd_toStartOf="@+id/imageView28"
            app:layout_constraintTop_toTopOf="@+id/imageView28"
            app:layout_constraintVertical_bias="0.363"
            app:srcCompat="@mipmap/bg_call_circle" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintEnd_toEndOf="@+id/imageView17"
        app:layout_constraintStart_toStartOf="@+id/imageView17"
        app:layout_constraintTop_toTopOf="@+id/imageView17"
        app:srcCompat="@mipmap/ic_phone" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/imageView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_mail"
            app:layout_constraintBottom_toBottomOf="@+id/imageView31"
            app:layout_constraintStart_toEndOf="@+id/imageView31"
            app:layout_constraintTop_toTopOf="@+id/imageView31">

            <TextView
                android:id="@+id/fragment_contact_us_tv_emailContact"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingBottom="2dp"
                android:text="info@rawnag.com"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="@+id/fragment_contact_us_iv_twitter"
            app:layout_constraintTop_toBottomOf="@+id/imageView17"
            app:srcCompat="@mipmap/bg_call_circle" />

        <ImageView
        android:id="@+id/imageView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/imageView31"
        app:layout_constraintEnd_toEndOf="@+id/imageView31"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/imageView31"
        app:layout_constraintTop_toTopOf="@+id/imageView31"
        app:srcCompat="@mipmap/ic_mail" />

    <EditText
        android:id="@+id/fragment_contact_us_et_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/curved_corners_with_stroke"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/name"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView33" />

    <EditText
        android:id="@+id/fragment_contact_us_et_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/curved_corners_with_stroke"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/phone"
        android:textAlignment="viewStart"
       android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_contact_us_et_name"
        app:layout_constraintStart_toStartOf="@+id/fragment_contact_us_et_name"
        app:layout_constraintTop_toBottomOf="@+id/fragment_contact_us_et_name" />

    <EditText
        android:id="@+id/fragment_contact_us_et_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/curved_corners_with_stroke"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_contact_us_et_phone"
        app:layout_constraintStart_toStartOf="@+id/fragment_contact_us_et_phone"
        app:layout_constraintTop_toBottomOf="@+id/fragment_contact_us_et_phone" />

        <EditText
            android:id="@+id/fragment_contact_us_et_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_corners_with_stroke"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/content"
            android:layout_marginTop="24dp"
            android:inputType="textMultiLine"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="80dp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_contact_us_et_email"
            app:layout_constraintStart_toStartOf="@+id/fragment_contact_us_et_email"
            app:layout_constraintTop_toBottomOf="@+id/fragment_contact_us_et_email" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="18dp"
        android:text="@string/send_message"
        android:textColor="@color/blue"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView29" />

        <Button
        android:id="@+id/fragment_contact_us_btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@mipmap/bg_reservation"
        android:text="@string/send"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_contact_us_et_message"
        app:layout_constraintStart_toStartOf="@+id/fragment_contact_us_et_message"
        app:layout_constraintTop_toBottomOf="@+id/fragment_contact_us_et_message" />

        <ProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>